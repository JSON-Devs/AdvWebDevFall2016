extends layout

block content
 h1=title
 h2=message
 form.form-horizontal(action="/form", method="post", role="form")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="firstName") First Name
          .col-xs-12.col-sm-10
            input#fName.form-control(name="firstName" required)
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="lastName") Last Name
          .col-xs-12.col-sm-10
            input#lName.form-control(name="lastName" required)
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="department") Department
          .col-xs-12.col-sm-10
            select#department.form-control.input-sm(name="department")
              option IT
              option Accounting
              option Human Resources
              option Marketing
              br
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="startDate") Start Date
          .col-xs-12.col-sm-10
            input#startDate.form-control(pattern="^(0?[1-9]|1[012])[\/\-](0?[1-9]|[12][0-9]|3[01])[\/\-](19([0-9]{2})|20(0[0-9]|1[0-9]))$" placeholder="mm/dd/yyyy (Year between 1900 and 2019)" name="startDate" required)
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="jobTitle") Job Tile
          .col-xs-12.col-sm-10
            input#jobTitle.form-control(name="jobTitle" required)
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="salary") Salary
          .col-xs-12.col-sm-10
            input#name.form-control(name="salary" required)
        center
            input(type="submit" value="Add Employee" class="btn btn-info") 
